<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemCVActivity"
    android:background="#FF5722">
    <include layout="@layout/toolbarupdate"
        android:id="@+id/toolbar_update"/>

    <TextView
        android:id="@+id/tv_updatecv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_update"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Update Công Việc"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_updatecv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_update"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/tv_updatecv"
        android:background="@drawable/bg_edt_login"
        android:padding="10dp" />
    <TextView
        android:id="@+id/tv_updatemota"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_below="@id/tv_updatecv"
        android:text="update Mô tả"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_updatemota"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edt_login"
        android:layout_below="@id/edt_updatecv"
        android:layout_toEndOf="@id/tv_updatecv"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/tv_updatenguoitao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_updatemota"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:text="update Người tạo"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edt_updatenguoitao"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_edt_login"
        android:layout_below="@id/edt_updatemota"
        android:layout_toEndOf="@id/tv_updatecv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_updatengaybatdau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_updatenguoitao"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:text="update Ngày bắt đầu"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_updatengaybatdau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_updatenguoitao"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/tv_updatengaybatdau"
        android:background="@drawable/bg_edt_login"
        android:padding="10dp" />
    <Button
        android:id="@+id/btn_save_update"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:backgroundTint="#249EA0"
        android:text="Lưu"
        android:layout_marginTop="50dp"
        android:layout_below="@id/edt_updatengaybatdau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>