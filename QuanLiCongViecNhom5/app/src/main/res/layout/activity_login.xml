<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF5722">
    <ImageView
        android:background="@drawable/img_bg"
        android:id="@+id/img_practive"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_bg"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/edt_sodienthoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_practive"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edt_login"
        android:hint="Số điện thoại"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/edt_matkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_sodienthoai"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edt_login"
        android:hint="Mật khẩu"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_matkhau"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#249EA0"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Đăng nhập" />
    <TextView
        android:id="@+id/tv_chuacotaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Chưa có tài khoản!"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />
    <View
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_below="@id/tv_chuacotaikhoan"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>